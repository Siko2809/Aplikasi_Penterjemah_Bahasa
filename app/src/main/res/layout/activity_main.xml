<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sitikhomariah.penterjemahbahasabanjar.myapplication.MainActivity">

    <TextView
        android:id="@+id/bahasa2"
        android:layout_width="75dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/bahasa1"
        android:layout_marginEnd="50dp"
        android:background="@android:color/background_light"
        android:text="Banjar"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/bahasa1"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="103dp"
        android:background="#ffffff"
        android:text="Indonesia"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/panah2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/kata1"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="-59dp"
        android:layout_toEndOf="@+id/bahasa2"
        app:srcCompat="@drawable/panah2" />

    <ImageView
        android:id="@+id/suara"
        android:layout_width="28dp"
        android:layout_height="26dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/panah2"
        android:layout_marginBottom="198dp"
        app:srcCompat="@drawable/suara" />

    <EditText
        android:id="@+id/kata1"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="170dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/arti1"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/bahasa1"
        android:layout_alignTop="@+id/suara"
        android:background="@android:color/background_light"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/panah1"
        android:layout_width="62dp"
        android:layout_height="28dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/bahasa2"
        android:layout_marginEnd="148dp"
        app:srcCompat="@drawable/panah" />

</RelativeLayout>
