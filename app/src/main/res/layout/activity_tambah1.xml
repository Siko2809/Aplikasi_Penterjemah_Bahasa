<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tambah1">

    <TextView
        android:id="@+id/subjek"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Tambah Subjek"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/indonesia"
        android:text="Indonesia :"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:textSize="18sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="65dp"
        android:ems="10" />

    <TextView
        android:id="@+id/banjar"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="120dp"
        android:ems="10"
        android:text="Banjar :"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editText_indonesia"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/indonesia"
        android:layout_toEndOf="@+id/indonesia"
        android:inputType="text"
        android:text="isi nama" />

    <EditText
        android:id="@+id/editText_banjar"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/banjar"
        android:layout_alignParentStart="true"
        android:layout_marginStart="75dp"
        android:inputType="text"
        android:text="isi nama" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="205dp"
        android:layout_toStartOf="@+id/subjek"
        android:text="Simpan" />

</RelativeLayout>